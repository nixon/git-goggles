#!/usr/bin/env python

import sys
import os

from gitgoggles.codereview import get_status, complete_review, start_review, update_branches
from gitgoggles.progress import enable_progress

def handle_command():
    if not os.path.exists('.git'):
        print 'Not within a git repository.'
        sys.exit(1)

    master = None
    try:
        if sys.argv[1] == "-m":
            del sys.argv[1]
            master = sys.argv.pop(1)
    except IndexError:
        pass

    if len(sys.argv) == 1:
        enable_progress()
        get_status(master)
    elif len(sys.argv) >= 2:
        if sys.argv[1] == 'codereview':
            if len(sys.argv) == 2:
                start_review(master)
            else:
                complete_review()
        elif sys.argv[1] == 'update':
            update_branches()
        else:
            print 'usage: git goggles [ -m master_branch ] [codereview|codereview complete|update]'

if __name__ == "__main__":
    try:
        handle_command()
    except KeyboardInterrupt:
        print 'Exiting.'
        sys.exit(1)
